<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.LineChart android:id="@+id/dailyrepschart"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="0.8" />

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="0.2">

        <RadioGroup android:layout_width="match_parent" android:layout_height="match_parent">

            <RadioButton android:id="@+id/rv_rb" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:checked="true"
                android:text="@string/rv_text" />

            <RadioButton android:id="@+id/dv_rb" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="@string/dv_text" />
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>