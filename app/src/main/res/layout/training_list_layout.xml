<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/small_font_size"
    android:layout_marginRight="@dimen/small_font_size"
    android:layout_marginTop="@dimen/small_font_size"
    android:orientation="vertical">

    <TextView
        android:id="@+id/traininginfodesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_font_size"
        android:textSize="@dimen/medium_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_font_size">

        <TextView
            android:id="@+id/traininginfodname"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textAlignment="textStart"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:id="@+id/traininginforeps"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="@dimen/small_font_size" />

        <TextView
            android:id="@+id/traininginfotimestamp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textAlignment="center"
            android:textSize="@dimen/small_font_size" />

    </LinearLayout>
</LinearLayout>
